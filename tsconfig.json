{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
